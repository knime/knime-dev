<?xml version="1.0" encoding="UTF-8"?>
<cspecExtension xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:bc="http://www.eclipse.org/buckminster/Common-1.0" xmlns="http://www.eclipse.org/buckminster/CSpec-1.0">
	<dependencies>
        <dependency name="org.knime.core" componentType="osgi.bundle" />
        <dependency name="org.knime.core.pmml" componentType="osgi.bundle" />
        <dependency name="org.knime.core.util" componentType="osgi.bundle" />
        <dependency name="org.knime.base" componentType="osgi.bundle" />
    </dependencies>    
    <actions>
		<public name="build.javadoc" actor="ant">
			<actorProperties>
				<property key="buildFileId" value="knime.javadoc" />
				<property key="targets" value="build.javadoc.new" />
			</actorProperties>
			<properties>
				<property key="javadoc.stylesheet"
					value="${project_loc:/org.knime.build}/files/stylesheet_knime.css" />
			</properties>
            <prerequisites alias="action.requirements">
                <attribute name="knime.source" component="org.knime.core" />
                <attribute name="knime.libs" component="org.knime.core" />

                <attribute name="knime.source" component="org.knime.core.util" />
                <attribute name="knime.libs" component="org.knime.core.util" />

                <attribute name="knime.source" component="org.knime.core.pmml" />
                <attribute name="knime.libs" component="org.knime.core.pmml" />

                <attribute name="knime.source" component="org.knime.base" />
                <attribute name="knime.libs" component="org.knime.base" />
            </prerequisites>
			<products alias="destination" base="${buckminster.home}/rootfiles/knime_doc"
				upToDatePolicy="DEFAULT">
				<path path="javadoc/" />
			</products>
		</public>
	</actions>
	<alterActions>
		<private name="feature.jar">
			<prerequisites>
				<attribute name="build.javadoc" />
			</prerequisites>
		</private>
	</alterActions>
</cspecExtension>
